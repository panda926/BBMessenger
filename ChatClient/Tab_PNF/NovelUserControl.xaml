<UserControl x:Class="ChatClient.NovelUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="29" Width="770">
    <Grid Name="novelGrid" MouseEnter="novelGrid_MouseEnter" MouseLeave="novelGrid_MouseLeave" MouseDown="novelGrid_MouseDown">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="595*" />
            <ColumnDefinition Width="175*" />
        </Grid.ColumnDefinitions>
        <Label  Name="titleLabel" HorizontalContentAlignment="Left" Foreground="Black">Label</Label>
        <Label  Name="dateLabel" Grid.Column="1" HorizontalContentAlignment="Right" Foreground="Black">Label</Label>
    </Grid>
</UserControl>
