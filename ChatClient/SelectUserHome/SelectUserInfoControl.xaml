		<PasswordBox VerticalAlignment="Bottom" Margin="99.993,0,208.599,69.04" Width="115" Name="newPass" IsEnabled="False" />
		<PasswordBox HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,41.392,69.04" Width="115" d:LayoutOverrides="HorizontalAlignment" Name="newPassverif" IsEnabled="False" />
		<ComboBox Margin="96.197,81.04,0,0" Style="{DynamicResource ComboBoxStyle}" VerticalAlignment="Top" HorizontalAlignment="Left" Width="90" Name="userYear" IsEnabled="False" />
		<ComboBox Margin="203,81.04,153.999,0" Style="{DynamicResource ComboBoxStyle}" VerticalAlignment="Top" Name="userMonth" IsEnabled="False" />
		<ComboBox HorizontalAlignment="Right" Margin="0,81.04,82,0" Style="{DynamicResource ComboBoxStyle}" VerticalAlignment="Top" Width="56" Name="userDay" IsEnabled="False" />
	</Grid>
</UserControl>