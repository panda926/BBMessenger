		<Label HorizontalAlignment="Left" Style="{DynamicResource SimpleLabel}" Content="집주소:" Margin="41.4,129.04,0,0" d:LayoutOverrides="HorizontalAlignment" VerticalAlignment="Top"/>
		<Label HorizontalAlignment="Left" Style="{DynamicResource SimpleLabel}" VerticalAlignment="Top" Name="userId" Margin="100,42,0,0"/>
		<TextBox Style="{DynamicResource SimpleTextBox}"  Margin="96,124.04,18,0" VerticalAlignment="Top" Name="userAddress" IsEnabled="False" />
		<TextBox HorizontalAlignment="Right" Style="{DynamicResource SimpleTextBox}" VerticalAlignment="Top" Margin="0,40,18,0" Width="117.392" Name="userNicname" IsEnabled="False" />
        <Label HorizontalAlignment="Left" Style="{DynamicResource SimpleLabel}" VerticalAlignment="Bottom" Content="기존암호:" Margin="42.006,0,0,111.04"/>
		<Label HorizontalAlignment="Left" Style="{DynamicResource SimpleLabel}" VerticalAlignment="Bottom" Content="변경암호:" Margin="43.006,0,0,69.04"/>
		<Label HorizontalAlignment="Right" Style="{DynamicResource SimpleLabel}" VerticalAlignment="Bottom" Content="암호확인:" Margin="0,0,153.999,69.04"/>
