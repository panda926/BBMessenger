        <Button Style="{DynamicResource NormalButtonStyle}" HorizontalAlignment="Right"  VerticalAlignment="Bottom" Width="75" Name="stateBt" Margin="0,0,8,3" Foreground="Black" Click="Button_Click" Height="23" />
